<script type="text/javascript" charset="utf-8">
  setTimeout( function() {do_ajax(<%= @pictures.empty? ? 0 : @pictures.first.id  %>);}, 5*1000 );
</script>
<div id="picture-frame">
<%= tag("fb:swf", :swfbgcolor => "000000", :imgstyle => "border-width:3px; border-color:white;", :swfsrc => "http://pseudothinker.com/flash/PicADay#{'Prod' if RAILS_ENV == 'production'}.swf", :width => 480, :height => 420, :flashvars => "fb_user_id=#{facebook_user.id}&user_hash=#{@user_hash}") %>
</div>
<div id="current-pic-div" style="display:none">
  <%= render :partial => "picture", :object => Picture.find(:first) %>
</div>
<%= render_pictures @pictures %>